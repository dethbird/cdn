{% block content %}
  <h1 class="title">Rename Project</h1>
  <div class="box">
    <form method="post" action="/projects/{{ project.id }}/rename">
      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <input class="input" name="name" value="{{ project.name|e }}" />
        </div>
      </div>
      <div class="field">
        <div class="control">
          <button class="button is-primary" title="Save" aria-label="Save project name" type="submit">
            <i class="fa-solid fa-check" aria-hidden="true"></i>
          </button>
        </div>
      </div>
    </form>
  </div>
{% endblock %}
