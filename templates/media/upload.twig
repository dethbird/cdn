{% extends 'layout.twig' %}

{% block title %}Upload media â€” CDN{% endblock %}

{% block content %}
  <h1 class="title">Upload media</h1>
  <div class="box">
  <form method="post" action="/upload" enctype="multipart/form-data">
      <div class="field">
        <label class="label">File</label>
        <div class="control">
          <input class="input" type="file" name="file" />
        </div>
      </div>

      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <input class="input" type="text" name="title" />
        </div>
      </div>

      <div class="field">
        <label class="label">Project</label>
        <div class="control">
          <div class="select">
            <select name="project">
              {# Render Social Media first and select it by default, then list the rest. #}
              {% for p in projects %}
                {% if p.id == 'socialmedia' %}
                  <option value="{{ p.id|e }}" selected>{{ p.name|e }}</option>
                {% endif %}
              {% endfor %}
              {% for p in projects %}
                {% if p.id != 'socialmedia' %}
                  <option value="{{ p.id|e }}">{{ p.name|e }}</option>
                {% endif %}
              {% endfor %}
            </select>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <button class="button is-primary" title="Upload" aria-label="Upload file" type="submit">
            <i class="fa-solid fa-upload" aria-hidden="true"></i>
          </button>
        </div>
      </div>
    </form>
  </div>
{% endblock %}
